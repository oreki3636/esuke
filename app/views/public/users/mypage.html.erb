<h1>image</h1>

<p>名前</p>
<%= @user.name %>

<p>自己紹介</p>
<%= @user.introduction %>

<h2>新規登録</h2>
<%= form_with model: @todo, url: todolists_path do |f| %>
  <%= f.text_field :list %>
  <%= f.submit "書き込み" %>
<% end %>
<small>予定は自動的に翌日にセットされます。</small>

<h2>現在のEスケポイント</h2>
<%= @user.points.count %>

<h2>カレンダー投稿</h2>

<%= month_calendar(attribute: :date, end_attribute: :date, events: @todolists) do |date, todos| %>
  <%= link_to todolist_path(date) do %>
    <%= date.day %>
  <% end %>
  <% todos.each do |todo| %>
    <div>
      <% if todo.check %>
        <strike><%= todo.list %></strike>
      <% else %>
        <%= todo.list %>
      <% end %>
    </div>
  <% end %>
<% end %>

<h2>ランキング</h2>

<table>
  <thead>
    <tr>
      <th>ランキング</th>
      <th>名前</th>
      <th>ポイント数</th>
    </tr>
  </thead>
</table>



