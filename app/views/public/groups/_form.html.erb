

<%= form_with model: group, local: true do |f| %>
 <div class="form-group">
  <%= f.label :グループ名 %>
  <%= f.text_field :name %>
 </div>

 <div class="form-group">
  <%= f.label :紹介文 %>
  <%= f.text_area :introduction %>
 </div>

 <div class="form-group">
  <%= f.label :グループ画像 %>
  <%= f.file_field :image, accept: 'image/*' %>
 </div>

 <div class="form-group">
  <%= f.label :パスワード %>
  <%= f.f.password_field :group_key %>
 </div>

 <div class="form-group">
  <%= f.submit %>
 </div>
<% end %>
